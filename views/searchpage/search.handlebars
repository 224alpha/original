<link type="text/css" rel="stylesheet" href="/css/search/search.css"  media="screen,projection"/>



<div class="container-wrapper">
			<div class="row inner-container-wrapper">
				<div class="col m3 hide-on-med-and-down card column-wrapper" >
					<div class="chip">
						<i class="material-icons">search</i>
						T-shirts
					</div>
					<hr>
					<div class="sorting-container">
						<h6 class="sorting-header">Sort By</h6>
						<p>
							<label>
							  <input class="with-gap" name="group3" type="radio" checked />
							  <span>Popularity</span>
							</label>
						</p>
						<p>
							<label>
							  <input class="with-gap" name="group3" type="radio" checked />
							  <span>Price-Low to High</span>
							</label>
						</p>
						<p>
							<label>
							  <input class="with-gap" name="group3" type="radio" checked />
							  <span>Price-High to Low</span>
							</label>
						</p>
					</div>
					
						   
						   
				</div>
				<div class="col s12 m12 x9 xl9 card items-container-holder">
					<nav>
						<div class="nav-wrapper">
							<div class="col s12">
					    		<a href="#!" class="breadcrumb">Items</a>
								<a href="#!" class="breadcrumb">T-shirts</a>
							</div>
					    </div>		
					</nav>
					<div class="item-holder">
						<div class="row">
                            {{#each items}}
                                <div class="col s12 m3 main-item-grid">
                                    <div class="card">
                                        <div class="row">
                                            <div class="card-image-wrapper col s12 m10 offset-m1">
                                                <img src="/{{this.image}}" class="responsive-img item-image-primary">
                                            </div>
                                            <div clas="col m1">
                                            </div> 
                                        </div>
                                        <div class="item-star center-align">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                            <span class="fa fa-star"></span>
                                        </div>
                                        <div class="item-name center-align">
                                            {{this.name}}
                                        </div>  
                                
                                        <div class="card-action center-align extra-section-in-item">
                                            <div class="row">
                                                <div class="col s6 center-align">
                                                    <p class="price-tag"><span class="green-text">&nbsp &#8377 {{this.price}}</span></p>
                                                </div>
                                                <div class="col s6">
                                                    <button class="waves-effect waves-light add-to-cart-button white-text tooltipped"  data-tooltip="Add to cart" onclick="getItem('{{this.id}}')"><i class="fa fa-shopping-basket" aria-hidden="true"></i></button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            {{/each}}
                        </div>
					</div>
                </div>
			</div>
		</div>




        <script type="text/javascript" src="/js/search/search.js"></script>
        <script>
            function getItem(id){
                window.location.replace("/item/"+id);
            }
        </script>
		