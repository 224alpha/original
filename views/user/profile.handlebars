				<hr>
				
				<form method="POST" class="my-account-form">
					
					<div class="row">
							
						<div class="input-field col s12 m12 l12 xl12">
							<i class="material-icons prefix">account_circle</i>
							<input disabled value="{{user.name}}" id="user_first_name" type="text" class="validate editable">
							<label for="user_first_name" class="purple-text text-darken-4">Name </label>
						</div>

					</div>


					<div class="row">
							
						<div class="input-field col s12 m6 l6 xl6">
							<i class="material-icons prefix">event</i>
							<input disabled value="{{user.age}}" id="dob" type="number" class="validate editable">
							<label for="dob" class="purple-text text-darken-4">Age</label>
						</div>
	
						<div class="input-field col s12 m6 l6 xl6">
							<i class=" prefix"><img src="logos/gender.png" width="28" height="28"></i>
							<select id="gender" disabled class="validate editable">
								<option disabled selected>{{user.gender}}</option>
								<option value="male">male</option>
								<option value="female">female</option>
							</select>
							<label class="purple-text text-darken-4">Gender</label>
						</div>	
	
					</div>

					<div class="row">
							
						<div class="input-field col s12 m6 l6 xl6">
							<i class="material-icons prefix">phone</i>
							<input disabled value="{{user.phone}}" id="user_phone_number" type="number" class="validate">
							<label for="user_phone_number" class="purple-text text-darken-4">Phone Number </label>
						</div>
	
						<div class="input-field col s12 m6 l6 xl6">
							<i class="material-icons prefix">email</i>
							<input disabled value="{{user.email}}" id="user_email_id" type="email" class="validate">
							<label for="user_email_id" class="purple-text text-darken-4">Email Id</label>
						</div>
	
					</div>

					<div class="row center-align">
						<button class="btn waves-effect waves-light submit-button hide" type="submit" name="action">Save
							<i class="material-icons right">send</i>
						</button>
					</div>

					<div class="row right-align">
						<button class="waves-effect waves-light btn submit-button modal-trigger" href="#passwordchange">Change Password
							<i class="material-icons right">edit</i>
						</button>
					</div>


				</form>
			</div>




