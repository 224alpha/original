<link type="text/css" rel="stylesheet" href="/css/cart/cart.css">
        <div class="container">
            <div class="row ">
                <div class="col s12 m12 l8 xl8 no-margine no-padding" id="cartitemsection">
                    {{#each cart}}
                    <div class="card left-section">
                        <div class="row {{id}}">
                            <div class="col s12 m12 l4 xl4">
                                <img src="/{{image}}" class="responsive-img cart-item-image">
                            </div>
                            <div class="col s10 m10 offset-s1 offset-m1 l8 xl8">
                                <p class="desc-item">Description of Item</p>
                                <p><span>Item Name : </span>{{item_name}}</p>
                                <p><span>Item type : </span>{{item_type}}</p>
                                <p><span>Size : </span>{{size}}</p>
                                <ul >
                                    <li style="display:inline-block;"><p><span>Color: &nbsp&nbsp&nbsp </span></li>
                                    <li style="display:inline-block;"><div  style="background-color:{{color}};width:25px;height:25px">  </div></li>
                                </ul>
                                
                                <p>Quantity : </p>                                    
                                <span class="btn minus remove" id="minus" ><i class="fa fa-minus" aria-hidden="true"></i></span>
                                <a class="btn {{id}} {{item_id}}" id="quantity">{{no_of_items}}</a>
                                <span class="btn plus remove" id="plus" ><i class="fa fa-plus" aria-hidden="true"></i></span>
                                <a class="btn remove waves-effect waves-light" style="" onclick="removeBtn('{{id}}')">Remove</a>
                                <p class="price">Price: <span>{{price}}</span> </p>
                                <p>
                                    
                                </p>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    <a href="/order" class="checkoutbtn1 center-align"><p>CHECKOUT</p></a>
                </div>
                <div class="l4 xl4 no-margin no-padding center">
                    
                    
                </div>


            </div>
            

            <a href="/order" class="checkoutbtn valign-wrapper center-align"><p>CHECKOUT</p></a>
            




            
        </div>

        
    
<script>

    function removeBtn(id)
    {
        console.log("clicked");
        console.log(id);
        $.ajax({
            method:"post",
            url:"/cart/remove",
            data:{id:id},
            success:function(){
            $('.'+id).remove();
            M.toast({html:"item removed successfully from cart",classes:"rounded"});
            },
            error:function(){M.toast({html:"Technical Issue",classes:"rounded"});}
        });
    } 

    function increase(id,value)
    {
